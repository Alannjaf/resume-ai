# Environment variables example file
# Copy this file to .env and fill in your actual values

# Database Configuration
# Get your connection string from Neon.tech dashboard
DATABASE_URL="postgresql://username:password@host/database?sslmode=require"

# Clerk Authentication Configuration
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_test_YOUR_SECRET_KEY

# Clerk Redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/dashboard

# Clerk Webhook Secret (optional for local testing)
# CLERK_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# OpenRouter AI Configuration
# Get your API key from https://openrouter.ai
OPENROUTER_API_KEY=sk-or-v1-YOUR_API_KEY

# Resend Email Service Configuration
# Get your API key from https://resend.com
RESEND_API_KEY=re_YOUR_API_KEY

# Google Gemini AI Configuration (when implemented)
# GOOGLE_GEMINI_API_KEY=YOUR_API_KEY

# Payment Gateway Configuration (when implemented)
# FIB_API_KEY=YOUR_API_KEY
# FIB_SECRET=YOUR_SECRET
# NASSPAY_API_KEY=YOUR_API_KEY
# NASSPAY_SECRET=YOUR_SECRET